			<Instruction>Déposez la malette sur la table</Instruction>
			<EndsWhen idUser="0" idSelectableObject="0" stateSelectableObject="released" objectOnStationaryObjectId = "0"/>
		</Substep>
	</Step>
	<Step name="Commencer l'opération">
		<Substep instruction="Prenez la seringue">
			<Instruction>Prenez la seringue</Instruction>
			<EndsWhen idUser="1" idSelectableObject="0" stateSelectableObject="selected"/>
		</Substep>
	</Step>
</Scenario>
